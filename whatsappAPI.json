swagger: '2.0'
info:
  version: 1.0.0
  title: Test API
host: pwpynv.api.infobip.com
basePath: /omni/1
schemes:
  - https
  - http
consumes:
  - application/json
produces:
  - application/json
paths:
  /advanced:
    post:
      summary: 'Sample endpoint: Post a whatsapp message'
      operationId: sendMessage
      tags:
        - Send Whatsapp Message
      security:
        - basicAuth: []
      parameters:
        - name: body
          in: body
          schema:
            $ref: '#/definitions/message'
          required: true
      responses:
        '200':
          description: This is the status code for successful API call
        default:
          description: Unexpected error
securityDefinitions:
  basicAuth:
    type: basic
definitions:
  message:
    type: object
    properties:
      destinations:
        type: array
        items:
          $ref: '#/definitions/dest'
      scenarioKey:
        type: string
      sms:
        $ref: '#/definitions/values'
      whatsapp:
        $ref: '#/definitions/values'
  dest:
    type: object
    properties:
      to:
        type: object
        properties:
          phoneNumber:
            type: string
  values: 
    type: object
    properties:
      text: 
        type: string
