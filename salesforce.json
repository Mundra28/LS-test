{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Salesforce - K2 "
  },
  "host": "login.salesforce.com",
  "schemes": [
    "https"
  ],
  "consumes": [
    "application/x-www-form-urlencoded"
  ],
  "paths": {
    "/services/oauth2/token": {
      "post": {
        "summary": "Get Token",
        "operationId": "generateToken",
        "tags": [
          "SalesforceAPIs"
        ],
        "parameters": [
          {
            "in": "formData",
            "name": "grant_type",
            "type": "string",
            "description": "grant key of the user",
            "required": true
          },
          {
            "in": "formData",
            "name": "client_id",
            "type": "string",
            "description": "client_id key of the user",
            "required": true
          },
          {
            "in": "formData",
            "name": "client_secret",
            "type": "string",
            "description": "client_secret key of the user",
            "required": true
          },
          {
            "in": "formData",
            "name": "username",
            "type": "string",
            "description": "username of the user",
            "required": true
          },
          {
            "in": "formData",
            "name": "password",
            "type": "string",
            "description": "password of the user",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "This is the status code for successful API call",
            "schema":
              "$ref": "#/definitions/token"
          },
          "default": {
            "description": "Unexpected error"
          }
        }
      }
    }
  },
  "definitions": {
    "token": {
      "type": "object",
      "properties": {
        "access_token": {
          "type": "string"
        }
      }
    }
  }
}
